<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="170dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="#002196F3"
                    app:srcCompat="?android:attr/scrollbarThumbHorizontal" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:text="전체 인기글"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="40dp"
                    android:text="+246 more"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="80dp"
                    app:srcCompat="?android:attr/listDivider" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="80dp"
                    app:srcCompat="?android:attr/listDivider" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="80dp"
                    app:srcCompat="?android:attr/listDivider" />

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="190dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="210dp"
                    app:srcCompat="?android:attr/scrollbarThumbHorizontal" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="230dp"
                    android:text="최신뉴스"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="230dp"
                    android:text="+134 more"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/iv_profile_small"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="420dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_bynickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="425dp"
                    android:text="Name surname"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="425dp"
                    android:text="1h ago"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/tv_smallchat"
                    android:layout_width="322dp"
                    android:layout_height="71dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="485dp"
                    android:text="Excepteur sint occaecat cupidatat non proident. sunt in culpa qui officia deserunt mollit anim"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="330dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="580dp"
                    app:srcCompat="?android:attr/scrollbarThumbHorizontal" />

                <ImageView
                    android:id="@+id/iv_chat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="735dp"
                    app:srcCompat="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/tv_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="735dp"
                    android:text="609"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="735dp"
                    app:srcCompat="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/tv_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="157dp"
                    android:layout_marginTop="735dp"
                    android:text="120"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="735dp"
                    android:text="SHARE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btn_add_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_add_post" />

</RelativeLayout>