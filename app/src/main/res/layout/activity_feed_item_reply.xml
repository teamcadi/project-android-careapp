<?xml version="1.0" encoding="utf-8"?>
<!-- 피드 화면의 답글 아이템 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="33dp">

    <!-- 답글을 작성한 사용자의 프로필 사진 -->
    <ImageView
        android:id="@+id/iv_reply_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="9dp"
        app:srcCompat="@drawable/iv_comment_profile"/>

    <!-- 답글을 작성한 사용자명 -->
    <TextView
        android:id="@+id/tv_reply_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:text="사용자명"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#2699FB"/>

    <!-- 답글을 작성한 시간 -->
    <TextView
        android:id="@+id/tv_reply_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_reply_user_name"
        android:layout_toRightOf="@+id/tv_reply_user_name"
        android:layout_marginLeft="20dp"
        android:text="2020.01.01 18:26"
        android:textSize="12sp"
        android:textColor="#2699FB"/>

    <!-- 답글 내용 -->
    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="10dp"
        android:text="좋아요~"
        android:textSize="14sp"
        android:textColor="#2699FB"/>

    <!-- 답글 신고 -->
    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_reply_user_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="신고"
        android:textSize="12sp"
        android:textColor="#2699FB"/>

</RelativeLayout>