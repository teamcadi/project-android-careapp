<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 상단바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme">

        <!-- 상단바 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="글쓰기"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- 글 쓰는 부분 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_writepage_divider2"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 게시판 텍스트 -->
            <TextView
                android:id="@+id/tv_wp_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="16dp"
                android:text="게시판"
                android:textSize="16sp"
                android:textColor="#2699FB"/>

            <!-- 진료과 선택 스피너 -->
            <Spinner
                android:id="@+id/wp_spinner"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="128dp"
                android:background="@drawable/spinner_border" />

            <!-- 질환태그 텍스트 -->
            <TextView
                android:id="@+id/tv_wp_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_wp_board"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:text="질환태그"
                android:textSize="16sp"
                android:textColor="#2699FB"/>

            <!-- 해시태그 입력창 이미지 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="31dp"
                android:layout_below="@+id/wp_spinner"
                android:layout_marginTop="12dp"
                android:background="@drawable/iv_writepage_hashtag"/>

            <!-- 해시태그 입력창 -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wp_spinner"
                android:layout_marginTop="11.5dp"
                android:layout_marginLeft="105dp"
                android:layout_marginRight="36dp"
                android:hint="#안구건조증 #결막염 #각막염"
                android:textSize="15sp"
                android:textColor="#2699FB"
                android:textColorHint="#2699FB"
                android:background="@null"/>

            <!-- 글 내용 텍스트 -->
            <TextView
                android:id="@+id/tv_wp_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_wp_tag"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:text="글 내용"
                android:textSize="16sp"
                android:textColor="#2699FB"/>

            <!-- 구분선1 -->
            <ImageView
                android:id="@+id/iv_writepage_divider1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="118dp"
                android:background="@drawable/iv_writepage_divider"/>

            <!-- 글 내용 입력칸 -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_writepage_divider1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="글을 입력하세요."
                android:textColorHint="#2699FB"
                android:background="@null"/>

        </RelativeLayout>
    </ScrollView>

    <!-- 구분선2 -->
    <ImageView
        android:id="@+id/iv_writepage_divider2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/iv_writepage_divider"/>

    <!-- 카메라 촬영 버튼 -->
    <ImageButton
        android:id="@+id/ib_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/iv_writepage_camera" />

