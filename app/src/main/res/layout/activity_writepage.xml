<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_wp_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginLeft="16dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <TextView
                    android:id="@+id/tv_wp_write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_centerHorizontal="true"
                    android:text="글쓰기"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_wp_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginLeft="350dp"
                    app:srcCompat="@android:drawable/checkbox_on_background" />

                <View
                    android:id="@+id/wp_divider1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="80dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tv_wp_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="18dp"
                    android:text="게시판"
                    android:textSize="20sp"/>

                <Spinner
                    android:id="@+id/wp_spinner"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="115dp"/>

                <TextView
                    android:id="@+id/tv_wp_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="18dp"
                    android:text="질환태그"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/ed_wp_tag"
                    android:layout_width="260dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="115dp" />

                <TextView
                    android:id="@+id/tv_wp_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="18dp"
                    android:text="글 내용"
                    android:textSize="20dp"/>

                <View
                    android:id="@+id/wp_divider2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="230dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tv_wp_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="18dp"
                    android:text="글을 입력하세요."
                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/iv_wp_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="630dp"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@android:drawable/ic_menu_camera" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="675dp"
        app:itemBackground="@color/design_default_color_on_primary"
        app:itemIconTint="@drawable/item_color"
        app:itemTextColor="@drawable/item_color"
        app:menu="@menu/menu_bottom"/>

</RelativeLayout>