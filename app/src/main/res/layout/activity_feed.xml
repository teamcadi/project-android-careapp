<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FeedActivity">

    <!-- 상단바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyApaAndroid">

        <!-- 상단바 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="피드"
            android:textSize="24sp"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- 피드 내용 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_above="@+id/line2">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <!-- 글을 작성한 사용자의 프로필 사진 -->
            <ImageView
                android:id="@+id/iv_feed_user_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/profile"/>

            <!-- 글을 작성한 사용자명 -->
            <TextView
                android:id="@+id/tv_feed_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:text="사용자 명"
                android:textSize="20sp"/>

            <!-- 글이 작성된 시간 -->
            <TextView
                android:id="@+id/tv_feed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="1시간 전"/>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#000000"
                android:layout_marginTop="60dp"/>

            <!-- 글의 내용 -->
            <TextView
                android:id="@+id/tv_feed_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginTop="10dp"
                android:text="제가 효과본 운동을 추천합니다.\n단, 절대 과하게 하지 마세요!"
                android:textSize="18sp"/>

            <!-- 글의 첨부된 이미지 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_content"
                android:layout_marginTop="20dp"
                android:dividerHeight="0px"
                android:divider="#FFFFFF"/>

            <!-- 글의 해시태그 -->
            <TextView
                android:id="@+id/tv_feed_hashtag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_image"
                android:layout_marginTop="20dp"
                android:text="#허리 #건강 #디스크"
                android:textSize="18sp"/>

            <!-- 공감 아이콘 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_hashtag"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ic_baseline_favorite_24"/>

            <!-- 공감 수 -->
            <TextView
                android:id="@+id/tv_feed_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_hashtag"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:text="609"
                android:textSize="18sp"/>

            <!-- 댓글 아이콘 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_hashtag"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="95dp"
                app:srcCompat="@drawable/ic_baseline_comment_24"/>

            <!-- 글에 달린 댓글의 수 -->
            <TextView
                android:id="@+id/tv_feed_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_hashtag"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="125dp"
                android:text="120"
                android:textSize="18sp"/>

            <!-- 스크랩 -->
            <TextView
                android:id="@+id/tv_scrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_hashtag"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:text="SHARE"
                android:textSize="18sp"/>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#000000"
                android:layout_below="@+id/tv_scrap"
                android:layout_marginTop="20dp"/>

            <!-- 글에 달린 댓글 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3" />

       </RelativeLayout>

    </ScrollView>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <!-- 댓글 입력창 -->
        <EditText
            android:id="@+id/et_input_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- 댓글 등록 버튼 -->
        <Button
            android:id="@+id/btn_register_comment"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="등록"/>

    </LinearLayout>

</RelativeLayout>