<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragment.RecentSearchFragment">

    <!-- 최근 검색어 리스트뷰 -->
    <ListView
        android:id="@+id/lv_recent_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#F1F9FF"
        android:divider="#FFFFFF"
        android:dividerHeight="2dp"/>

    <!-- 해시태그 버튼들 -->
    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_recent_search"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btn_hashtag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="#백내장"
            android:background="@drawable/btn_search_hashtag"
            app:backgroundTint="#2699FB" />

        <Button
            android:id="@+id/btn_hashtag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="#녹내장"
            android:background="@drawable/btn_search_hashtag"
            app:backgroundTint="#2699FB" />

        <Button
            android:id="@+id/btn_hashtag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="#라식"
            android:background="@drawable/btn_search_hashtag"
            app:backgroundTint="#2699FB" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btn_hashtag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="#안구건조증"
            android:background="@drawable/btn_search_hashtag"
            app:backgroundTint="#2699FB"/>

        <Button
            android:id="@+id/btn_hashtag5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="#알레르기"
            android:background="@drawable/btn_search_hashtag"
            app:backgroundTint="#2699FB"/>

    </LinearLayout>

</RelativeLayout>