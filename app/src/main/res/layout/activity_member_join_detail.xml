<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/abc_vector_test" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="40dp"/>

                <Button
                    android:id="@+id/btn_men"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="40dp"
                    android:text="남성" />

                <Button
                    android:id="@+id/btn_woman"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="250dp"
                    android:text="여성" />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="40dp"/>

                <EditText
                    android:id="@+id/ev_height"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="173cm"
                    android:textSize="20dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="40dp"/>


                <ImageView
                    android:id="@+id/iv_plus1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="270dp"
                    app:srcCompat="@android:drawable/ic_input_add" />

                <ImageView
                    android:id="@+id/iv_minus1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="330dp"
                    app:srcCompat="@android:drawable/ic_input_add" />

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="몸무게"
                    android:layout_marginTop="300dp"
                    android:layout_marginLeft="40dp"/>

                <EditText
                    android:id="@+id/ev_weight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="70kg"
                    android:textSize="20dp"
                    android:layout_marginTop="330dp"
                    android:layout_marginLeft="40dp"/>

                <ImageView
                    android:id="@+id/iv_plus2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="330dp"
                    android:layout_marginLeft="270dp"
                    app:srcCompat="@android:drawable/ic_input_add" />

                <ImageView
                    android:id="@+id/iv_minus2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="330dp"
                    android:layout_marginLeft="330dp"
                    app:srcCompat="@android:drawable/ic_input_add" />



                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="직업"
                    android:layout_marginTop="400dp"
                    android:layout_marginLeft="40dp"/>

                <EditText
                    android:id="@+id/ev_job"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="대학생"
                    android:textSize="20dp"
                    android:layout_marginTop="430dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관심 연령대 설정"
                    android:layout_marginTop="500dp"
                    android:layout_marginLeft="40dp"/>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="530dp"
                    android:layout_marginLeft="40dp"
                    android:max="100"/>

                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="630dp"
                    android:layout_centerHorizontal="true"
                    android:text="완료" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>