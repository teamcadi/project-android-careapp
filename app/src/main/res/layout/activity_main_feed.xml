<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <SearchView
                    android:layout_width="388dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    >

                </SearchView>

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="16dp"
                    android:text="안과" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="110dp"
                    android:textSize="16dp"
                    android:text="내과" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="16dp"
                    android:text="치과" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="260dp"
                    android:textSize="16dp"
                    android:text="피부과" />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="340dp"
                    android:textSize="16dp"
                    android:text="소아과" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="380dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="130dp"
                    android:layout_centerHorizontal="true"

                    app:srcCompat="?android:attr/scrollbarThumbHorizontal" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="전체 인기글" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="300dp"
                    android:textSize="14sp"
                    android:text="+246 more" />

                <ImageView
                android:id="@+id/imageView7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="?android:attr/listDivider" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="160dp"
                    app:srcCompat="?android:attr/listDivider" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="280dp"
                    app:srcCompat="?android:attr/listDivider" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="380dp"
                    android:layout_height="190dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="320dp"
                    app:srcCompat="?android:attr/scrollbarThumbHorizontal" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="340dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="최신뉴스" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="340dp"
                    android:layout_marginLeft="300dp"
                    android:textSize="14sp"
                    android:text="+134 more" />


                <ImageView
                    android:id="@+id/iv_profile_small"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="550dp"
                    android:layout_marginLeft="50dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_bynickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="555dp"
                    android:layout_marginLeft="105dp"
                    android:text="Name surname"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="555dp"
                    android:layout_marginLeft="310dp"
                    android:text="1h ago"
                    android:textSize="17sp"/>


                <TextView
                    android:id="@+id/tv_smallchat"
                    android:layout_width="322dp"
                    android:layout_height="71dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="615dp"
                    android:text="Excepteur sint occaecat cupidatat non proident. sunt in culpa qui officia deserunt mollit anim"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="330dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="710dp"
                    app:srcCompat="?android:attr/scrollbarThumbHorizontal" />

                <ImageView
                    android:id="@+id/iv_chat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="865dp"
                    android:layout_marginLeft="35dp"
                    app:srcCompat="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/tv_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="609"
                    android:layout_marginTop="865dp"
                    android:layout_marginLeft="67dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="865dp"
                    android:layout_marginLeft="125dp"
                    app:srcCompat="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/tv_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:layout_marginTop="865dp"
                    android:layout_marginLeft="157dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="865dp"
                    android:layout_marginLeft="310dp"
                    android:text="SHARE"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_btnplus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="825dp"
                    app:srcCompat="@android:drawable/ic_menu_add" />


                >
            >
            </RelativeLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nv_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemBackground="@color/design_default_color_on_primary"
                app:itemIconTint="@drawable/item_color"
                app:itemTextColor="@drawable/item_color"
                app:menu="@menu/menu_bottom"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>