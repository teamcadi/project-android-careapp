<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="35dp"
                    android:text="PROFILE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_option"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginLeft="350dp"
                    app:srcCompat="?android:attr/listChoiceIndicatorSingle" />

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="40dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/large_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="114dp"
                    android:layout_marginLeft="130dp"
                    android:text="사용자"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_nim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="205dp"
                    android:layout_marginTop="120dp"
                    android:textSize="20sp"
                    android:text="님"/>

                <ImageView
                    android:id="@+id/iv_pencil"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="350dp"
                    app:srcCompat="?android:attr/listChoiceIndicatorSingle" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="380dp"
                    android:layout_height="145dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="190dp"

                    app:srcCompat="?android:attr/scrollbarThumbHorizontal" />

                <ImageView
                    android:id="@+id/iv_arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="203dp"
                    android:layout_marginLeft="18dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <ImageView
                    android:id="@+id/iv_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="203dp"
                    android:layout_marginLeft="363dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:layout_centerHorizontal="true"
                    android:text="2020년 12월"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:layout_centerHorizontal="true"
                    android:text="일      월      화      수      목      금      토"
                    android:textSize="21sp"/>

                <ImageView
                    android:id="@+id/iv_circle1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="32dp"
                    app:srcCompat="@android:drawable/presence_invisible" />

                <ImageView
                    android:id="@+id/iv_circle2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="85dp"
                    app:srcCompat="@android:drawable/presence_invisible" />


                <ImageView
                    android:id="@+id/iv_circle3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="136dp"
                    app:srcCompat="@android:drawable/presence_invisible" />


                <ImageView
                    android:id="@+id/iv_circle4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="188dp"
                    app:srcCompat="@android:drawable/presence_invisible" />

                <ImageView
                    android:id="@+id/iv_circle5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="240dp"
                    app:srcCompat="@android:drawable/presence_invisible" />

                <ImageView
                    android:id="@+id/iv_circle6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="291dp"
                    app:srcCompat="@android:drawable/presence_invisible" />

                <ImageView
                    android:id="@+id/iv_circle7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="342dp"
                    app:srcCompat="@android:drawable/presence_invisible" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="380dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="?attr/actionBarDivider" />

                <ImageView
                    android:id="@+id/iv_profile_small"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="55dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_bynickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="110dp"
                    android:text="by 척추뿌셔1011"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="320dp"
                    android:text="1h ago"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_largechat"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:layout_centerHorizontal="true"
                    android:text="Excepteur sint occaecat cupidatat"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_smallchat"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="210dp"
                    android:text="Excepteur sint occaecat cupidatat non proident. sunt in culpa qui officia deserunt mollit anim"
                    android:textSize="19sp"/>

                <ImageView
                    android:id="@+id/iv_bottom"
                    android:layout_width="380dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="313dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="?android:attr/scrollbarThumbHorizontal" />

                <ImageView
                    android:id="@+id/iv_chat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="343dp"
                    android:layout_marginLeft="55dp"
                    app:srcCompat="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/tv_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="609"
                    android:layout_marginTop="343dp"
                    android:layout_marginLeft="87dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="343dp"
                    android:layout_marginLeft="145dp"
                    app:srcCompat="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/tv_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:layout_marginTop="343dp"
                    android:layout_marginLeft="177dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="343dp"
                    android:layout_marginLeft="310dp"
                    android:text="SHARE"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_btnplus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="330dp"

                    app:srcCompat="@android:drawable/ic_menu_add" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="675dp"
        app:itemBackground="@color/design_default_color_on_primary"
        app:itemIconTint="@drawable/item_color"
        app:itemTextColor="@drawable/item_color"
        app:menu="@menu/menu_bottom"/>

</RelativeLayout>