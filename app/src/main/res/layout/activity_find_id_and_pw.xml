<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="아이디/비밀번호 찾기"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:text="아이디 찾기"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="비밀번호 찾기"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_alignBaseline="@id/ev_name"
        android:text="이름"/>

    <EditText
        android:id="@+id/ev_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:inputType="textPersonName"
        android:hint="홍길동"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_alignBaseline="@id/ev_email"
        android:text="이메일"/>

    <EditText
        android:id="@+id/ev_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:inputType="textEmailAddress"
        android:hint="hong_pill@mail.com"
        android:gravity="right"/>

    <View
        android:layout_width="50px"
        android:layout_height="10px"
        android:background="#000000"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/ev_phoneNumber"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:inputType="phone"
        android:hint="휴대번호전화 입력('-'제외)"/>

    <Button
        android:id="@+id/btn_send_certificationNumber"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="인증번호 전송"/>

    <EditText
        android:id="@+id/ev_certificationNumber"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:inputType="number"
        android:hint="인증번호 입력"/>

    <Button
        android:id="@+id/btn_indentify_certifiationNumber"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="확인"/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="완료"/>

</RelativeLayout>