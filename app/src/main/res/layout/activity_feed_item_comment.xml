<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 댓글을 작성한 사용자의 프로필 사진 -->
    <ImageView
        android:id="@+id/iv_comment_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="9dp"
        app:srcCompat="@drawable/iv_comment_profile"/>

    <!-- 댓글을 작성한 사용자명 -->
    <TextView
        android:id="@+id/tv_comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:text="사용자명"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#2699FB"/>

    <!-- 댓글을 작성한 시간 -->
    <TextView
        android:id="@+id/tv_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_comment_user_name"
        android:layout_toRightOf="@+id/tv_comment_user_name"
        android:layout_marginLeft="20dp"
        android:text="2020.01.01 18:26"
        android:textSize="12sp"
        android:textColor="#2699FB"/>

    <!-- 댓글 내용 -->
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="9dp"
        android:text="오늘부터 해봐야겠어요~"
        android:textSize="14sp"
        android:textColor="#2699FB"/>

    <!-- 댓글 신고 -->
    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_comment_user_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="신고"
        android:textSize="12sp"
        android:textColor="#2699FB"/>

    <!-- 댓글에 답글 쓰기 -->
    <TextView
        android:id="@+id/tv_write_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_comment"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="답글쓰기"
        android:textSize="12sp"
        android:textColor="#2699FB"/>

    <!--피드 구분선 -->
    <ImageView
        android:id="@+id/iv_feed_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment"
        android:layout_marginTop="10dp"
        android:background="@drawable/iv_feed_divider"/>

    <!-- 댓글의 답글 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_feed_divider"/>

</RelativeLayout>