<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_c_backarrow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="31.5dp"
        android:layout_marginLeft="18dp"
        app:srcCompat="@drawable/bw_arrow" />

    <TextView
        android:id="@+id/tv_c_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29.25dp"
        android:textColor="#2699FB"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="캘린더" />


    <CalendarView
        android:id="@+id/calander_c"
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67.5dp"/>

    <ImageView
        android:id="@+id/iv_c_plusbtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="600dp"
        app:srcCompat="@drawable/add" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bn_wp_navigation1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="start"
        android:layout_marginTop="675dp"
        android:background="#2699FB"
        app:itemIconTint="@drawable/menu_selector_color"
        app:itemTextColor="@drawable/menu_selector_color"
        app:menu="@menu/menu_bottom" />

</RelativeLayout>